@model toDoList.ViewModels.TaskCreateViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>TaskCreateViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group" hidden>
                <input hidden asp-for="TaskID" class="form-control" />
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TaskID" />
            <div class="form-group">
                <label asp-for="TaskName" class="control-label"></label>
                <input asp-for="TaskName" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskDescription" class="control-label"></label>
                <input asp-for="TaskDescription" class="form-control" />
                <span asp-validation-for="TaskDescription" class="text-danger"></span>
            </div>
            <div class="col-sm-10 font-weight-bold">
                <select asp-for="TaskActive" class="custom-select mr-sm-2" style="font-weight:bold;width:135px;"
                        asp-items="@Html.GetEnumSelectList<StatusEnum>()">
                    <option value="" class="active">Please Select</option>
                </select>
                <span asp-validation-for="TaskActive" title="Task Active" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button style="display:inline;" type="submit" class="btn btn-success float-right" asp-controller="Task" asp-action="edit" formmethod="post">Update</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

