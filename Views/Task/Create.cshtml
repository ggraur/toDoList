@model toDoClassLibrary.ToDoTask

@{
    ViewData["Title"] = "Create Task";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskName" class="control-label">Task Name</label>
                <input asp-for="TaskName" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskDescription" class="control-label">Task Description</label>
                <input asp-for="TaskDescription" class="form-control" />
                <span asp-validation-for="TaskDescription" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="TaskActive" class="col-sm-2 col-form-label" style="width:200px;">Status</label> <br />
                <div class="col-sm-10 font-weight-bold">
                    <select asp-for="TaskActive" class="custom-select mr-sm-2" style="font-weight:bold;width:135px;"
                            asp-items="@Html.GetEnumSelectList<StatusEnum>()">
                        <option value="" class="active">Please Select</option>
                    </select>
                    <span asp-validation-for="TaskActive" title="Task Active" class="text-danger"></span>
                </div>
  
            </div>  <br />
            <div class="form-group align-bottom">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

