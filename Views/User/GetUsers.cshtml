@model IEnumerable<toDoClassLibrary.User>
@inject IUserRepository _userRepo

@{
    ViewBag.Title = "Existing Users";
}

<h3>Total existing users = @_userRepo.GetUsers().Count()</h3>
<hr />

<div class="card-deck">
    @foreach (var user in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3>@user.UserName</h3>
            </div>
            <img class="card-img-top" src="~/images/noimage.jpg" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="user" asp-action="details" asp-route-id="@user.UserID" class="btn btn-info">Show</a>
                <a href="#" class="btn btn-warning m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
                <a href="#" class="btn btn-info  m-1">
                    <span class="glyphicon glyphicon-th-list"></span>&nbsp;Do List
                </a>
            </div>
        </div>
    }
</div>


