@model UserDetailsViewModel
@{
    ViewBag.Title = "User Details";
}

<h3>@Html.DisplayFor(model => model.PageTitle)</h3>
<hr />

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <h1>@Model.User.UserName</h1>
        </div>
    </div>
    <div class="card-body text-center">
        @*<img class="card-img-top" src="~/images/noimage.jpg" asp-append-version="true" />*@
        <div style=" width: 50vh; height: auto; margin: 0 auto; padding: 10px; position: relative;">
            <img class="card-img-top" src="~/images/noimage.jpg" asp-append-version="true" />
            <div >
                <h4> User ID: @Model.User.UserID </h4>
                <h4> User Email: @Model.User.UserEmail </h4>
                <h4> User Role: @Model.User.RoleId </h4>
            </div>
        </div>
    </div>
    <div class="card-footer text-center" style="position:fixed;bottom:0px;">
    @*<div style="position:fixed; bottom:0px;">*@
        <a asp-controller="user" asp-action="index" class="btn btn-primary">Back</a>
        <a class="btn btn-warning">Edit</a>
        <a class="btn btn-danger">Delete</a>
    </div>

</div>
