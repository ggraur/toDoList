<body>
    <div class="container col-md-10 offset-1">

        <nav class="navbar navbar-expand-sm bg-dark navbar-dark" style="background-color: rgb(0,51,73) !important;">
            <a class="navbar-brand float-left" asp-action="index" asp-controller="home">
                <img src="~/favicon.ico" />
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#collapsibleNavBar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavBar">
                <div class="navbar-nav float-left">
                    <ul class="navbar-nav ml-auto ">
                        @if (signInManager.IsSignedIn(User) && User.IsInRole("Administrator"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="manageAccessDropDownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Manage
                                </a>
                                <div class="dropdown-menu" aria-labelledby="manageAccessDropDownMenu">
                                    <a class="dropdown-item" asp-action="Register" asp-controller="Account">New User</a>
                                    <a class="dropdown-item" asp-action="CreateRole" asp-controller="administration">New Role</a>
                                    <a class="dropdown-divider"><hr /></a>
                                    <a asp-action="ListUsers" asp-controller="Administration" class="dropdown-item">Users</a>
                                    <a asp-action="ListRoles" asp-controller="Administration" class="dropdown-item">Roles</a>
                                </div>
                            </li>

                        }
                    </ul>
                </div>
                <div class="navbar-nav ml-auto float-right">
                    <ul class="navbar-nav ml-auto ">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item nav-pills">
                                <form method="post" asp-action="logout" asp-controller="account">
                                    <button type="submit" class="nav-link btn btn-link py-0" style="width:auto;vertical-align:middle">
                                        Logout @User.Identity.Name
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-action="register" asp-controller="account" class="nav-link"><span class="glyphicon glyphicon-user"></span>&nbsp;Register&nbsp;</a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="login" asp-controller="account" class="nav-link"><span class="glyphicon glyphicon-log-in"></span>&nbsp;Login&nbsp;</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        <div class="row">
            @if (signInManager.IsSignedIn(User))
            {
                <div class="vertical-menu float-left col-md-2 rounded">
                    <a href="#" class="active rounded">Home</a>
                    <a href="#">Link 1</a>
                    <a href="#">Link 2</a>
                    <a href="#" class="active">Link 3</a>
                    <a href="#">Link 4</a>
                </div>

