@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> signInManager;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <environment include="Development">
        <script src="../lib/jquery/jquery.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

        @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css" >
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>*@
        <script src="../lib/bootstrap/js/bootstrap.js"></script>
        <link href="../lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    </environment>

    <script src="../lib/bootstrap/js/bootstrap.min.js"></script>

    <link href="../css/bootstrap.min.css" rel="stylesheet" />
    @*<link href="../css/site.css" rel="stylesheet" />*@

    <title>@ViewBag.Title</title>
    <style>
        /* .bg-dark {
            background-color: antiquewhite !important;
        }*/
        .navbar {
            height: 80px !important;
        }

            .navbar navbar-expand-sm bg-dark navbar-dark {
                background-color: #e9e9e9 !important;
            }

        .nav-item {
            padding-left: 10px;
            padding-right: 10px;
        }

            .nav-item:hover {
                background-color: #99ff99 !important;
                text-decoration-color: #e9e9e9 !important;
            }

        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
/*            background-color: #e9e9e9 !important;*/
        }
        /*   .navbar-dark {
            background-color: #e9e9e9 !important;
            height: 80px;
        }        */
        /*.nav-item {
            background-color: #e9e9e9 !important;
        }
         .nav-pills {
            background-color: #e9e9e9 !important;
        }*/
        li {
            float: left;
        }

            li a, .dropbtn {
                display: inline-block;
                /*color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                background-color: #e9e9e9 !important;*/
            }

               li a:hover, .dropdown:hover .dropbtn {
                    background-color: #99ff99;    /*/green lime/*/
                } 

            li.dropdown {
                display: inline-block;
            }
    </style>
</head>
<body>
    <div class="container col-md-10 offset-1">
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <a class="navbar-brand float-left" asp-action="index" asp-controller="home">
                <img src="~/favicon.ico" />
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#collapsibleNavBar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavBar">
                <div class="navbar-nav ml-auto float-left">
                    <ul class="navbar-nav ml-auto ">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item nav-pills nav-link"><a asp-action="Create" asp-controller="User">Create New User</a></li>
                            <li class="nav-item nav-pills nav-link"><a asp-action="index" asp-controller="User">View Users</a></li>
                            <li class="nav-item nav-pills nav-link"><a asp-action="Create" asp-controller="Task">Create New Task</a></li>
                            <li class="nav-item nav-pills nav-link"><a asp-action="index" asp-controller="Task">View Tasks</a></li>
                            <li class="dropdown-divider"></li>
                            <li class="nav-item nav-pills">
                                <form method="post" asp-action="logout" asp-controller="account">
                                    <button type="submit" class="nav-link btn btn-link py-0" style="width:auto;vertical-align:middle">
                                        @*<button type="submit" class="nav-link btn btn-link py-0  align-text-bottom" style="width:auto;vertical-align:middle">*@
                                        Logout @User.Identity.Name
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-action="register" asp-controller="account" class="nav-link"><span class="glyphicon glyphicon-user"></span>&nbsp;Register&nbsp;</a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="login" asp-controller="account" class="nav-link"><span class="glyphicon glyphicon-log-in"></span>&nbsp;Login&nbsp;</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
            @RenderBody()
        </div>
        @if (IsSectionDefined("Scripts"))
        {
            @RenderSection("Scripts", true)
        }
    </div>
</body>
</html>
