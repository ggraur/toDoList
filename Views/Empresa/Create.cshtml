@model toDoList.ViewModels.EmpresasViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="card">
    <div class="card-header">
        <h1>Criar Empresa</h1>
        <hr />
    </div>
    <div class="card-body">
        <form asp-action="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NIF" class="control-label"></label>
                <input asp-for="NIF" class="form-control" />
                <span asp-validation-for="NIF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Licenca" class="control-label"></label>
                <input asp-for="Licenca" class="form-control" />
                <span asp-validation-for="Licenca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NrPostos" class="control-label"></label>
                <input asp-for="NrPostos" class="form-control" />
                <span asp-validation-for="NrPostos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NrEmpresas" class="control-label"></label>
                <input asp-for="NrEmpresas" class="form-control" />
                <span asp-validation-for="NrEmpresas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataExpiracao" class="control-label"></label>
                <input asp-for="DataExpiracao" class="form-control" />
                <span asp-validation-for="DataExpiracao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataCriacao" class="control-label"></label>
                <input asp-for="DataCriacao" class="form-control" />
                <span asp-validation-for="DataCriacao" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
            <div>
                <div class="form-group">
                    <input type="submit" value="Guardar" asp-action="Create" asp-controller="Empresa"   class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer">
         <a asp-action="Index">Back to List</a>
    </div>
</div>





