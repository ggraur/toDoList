@model toDoList.ViewModels.EmpresasViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header">
        <h1 class="alert alert-danger"><strong>Tem A certeza que quer eliminar a Empresa: @ViewBag.NomeEmpresa !?</strong></h1>
        <hr />
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NIF)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NIF)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Licenca)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Licenca)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NrPostos)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NrPostos)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NrEmpresas)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NrEmpresas)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataExpiracao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataExpiracao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataCriacao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataCriacao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ativo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ativo)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="EmpresaID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Voltar aos registos das empresas</a>
        </form>
    </div>
</div>

