@model toDoList.ViewModels.CLabViewModel

<div class="card">
    <div class="card-header">
        <h1>CONVERTER C-LAB PARA SAGE</h1>
        <hr />
    </div>
    <div class="card-body">
        @*<div class="col-md-4">*@
            <form asp-action="Export" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" hidden>
                    <label asp-for="EmpresaSageId" class="control-label"></label>
                    <input  asp-for="EmpresaSageId" class="disabled"  hidden />
                    <span asp-validation-for="EmpresaSageId" class="text-danger"></span>
                </div>
                <div class="form-group" >
                    <label asp-for="Ano" class="control-label"></label>
                    <input asp-for="Ano" class="form-control" value="@Model.Ano" readonly />
                    <span asp-validation-for="Ano" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataLancamento" class="control-label"></label>
                    <input asp-for="DataLancamento" type="date" class="form-control" value="@Model.DataLancamento.ToString("yyyy-MM-dd")" style="width:180px !important;" />
                    <span asp-validation-for="DataLancamento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="custom-file">
                        <input asp-for="InputFilePath" type="file" accept=".asc" class="custom-file-input form-control" id="clabInputFilePath">
                        <label id="inputFileLabel" class="custom-file-label" asp-for="InputFilePath">Caminho do ficheiro '.asc'</label>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="OutputFilePAth" class="control-label"></label>
                    <input asp-for="OutputFilePAth" class="form-control" />
                    <span asp-validation-for="OutputFilePAth" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="UserID" class="control-label"></label>
                    <input asp-for="UserID" class="form-control" />
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>
                <div class="form-group card-footer">
                    <input type="submit" value="Export" class="btn btn-primary" />
                </div>
            </form>
        @*</div>*@
    </div>

    <div class="card-footer">
        <a asp-action="Index">Back to List</a>
    </div>
</div>
<script>
    $('.custom-file-input').on('change',
        function ()
        {
            var fileName = $(this).val().split("\\").pop();
            $(this).next('.custom-file-label').html(fileName);
        }); 
</script>