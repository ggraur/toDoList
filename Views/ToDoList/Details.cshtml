@model ToDoListDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>ToDoList</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToDoList.ToDoListName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToDoList.ToDoListName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToDoList.CreatedToDoListDatetime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToDoList.CreatedToDoListDatetime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToDoList.FinalizationDatetime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToDoList.FinalizationDatetime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToDoList.UserIDCreator)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToDoList.UserIDCreator)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToDoList.UserIDExecutor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToDoList.UserIDExecutor)
        </dd>
    </dl>
    <div class="row">
        <form id="subTask">
            <table>
                <thead>
                    <tr>
                        <td>Check/Uncheck Values</td>
                        <td>Existing Tasks</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model.Tasks)
                    {
                        <tr>
                            <td><input type="checkbox" /></td>
                            <td>@Html.DisplayFor(modelItem => task.TaskName)</td>
                        </tr>
                    }
                    <tr colspan="2">
                        <td>
                            <button>Save</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ToDoList.ToDoListID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
